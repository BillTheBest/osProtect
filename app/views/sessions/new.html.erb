<div id="wrapper">
  <div id="content_wrapper">
    <div class="flashes">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :class=>"flash flash_#{name}" %>
      <% end %>
    </div>
    <div id="osprotect_content">
      <div id="login">
        <h2>Login</h2>
        <%= form_tag sessions_path do %>
          <fieldset class="inputs">
            <ol>
              <li class="email required">
                <%= label_tag :username %>
                <%= text_field_tag :username, params[:username] %>
              </li>
              <li class="password required">
                <%= label_tag :password %>
                <%= password_field_tag :password %>
              </li>
            </ol>
          </fieldset>
          <fieldset class="buttons">
            <ol>
              <li class="commit">
                <input class="create" name="commit" type="submit" value="Login">
              </li>
            </ol>
          </fieldset>
        <% end %>
        <%= link_to "Forgot your password?", new_password_reset_path %>
      </div> <!-- login -->
    </div> <!-- osprotect_content -->
  </div> <!-- content_wrapper -->
</div> <!-- wrapper -->
