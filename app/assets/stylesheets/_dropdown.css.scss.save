#ddm li.admin-option {
  border-right: 0;
  height: 20px;
  line-height: 20px;
  padding: 0;
}

#ddm li.admin-option a.no_menu_link {
  background: url("<%= asset_path("main/nav-bg.png") %>") repeat-x;
  border: 1px solid #c8c8c8;
  padding: 0 0 0 5px;
  margin: 4px 0 0 0;
  height: 24px;
  line-height: 22px;
  width: 140px;
  text-align: left;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
}

#ddm li.admin-option img{
  float: right;
  display: block;
  margin: -16px 6px 0 0px;
}

#ddm li.admin-option a.no_menu_link:hover {
  color: #333;
}

.admin-option, .admin-option ul  {
  margin-left: 270px;
}
